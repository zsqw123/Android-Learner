    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt_anim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="anim" />

    <Button
        android:id="@+id/bt_view_group"
        android:layout_width="match_parent"
