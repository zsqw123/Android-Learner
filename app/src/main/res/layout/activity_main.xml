    <Button
        android:id="@+id/bt_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PhotoView" />

    <Button
        android:id="@+id/bt_touch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Touch" />
